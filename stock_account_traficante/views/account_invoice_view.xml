<odoo>

    <record model="ir.ui.view" id="cancel_invoice_wizard_form">
        <field name="name">cancel.invoice.wizard.form</field>
        <field name="model">cancel.invoice.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Confirm dialog">
                <group>
                    <field name="cancellation_reason" string="Motivo de cancelación"/>
                </group>
                <field name="yes_no" readonly="True"/>
                <footer>
                    <button class="oe_highlight" name="yes" type="object" string="Cancelar y devolver productos" />
                    <button name="no" type="object" string="Solo cancelar la factura" />
                </footer>
            </form>
        </field>
    </record>


    <record id="view_invoice_inherit_form_cancel_stock" model="ir.ui.view">
        <field name="name">account.move.inherit.form.cancel.stock</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <button name="button_cancel" position="after">
                <button name="button_cancel_traficante" string="Cancelar Asiento" type="object" attrs="{'invisible' : ['|', ('id', '=', False), ('state', '!=', 'draft')]}" modifiers="{'invisible':['|',['id','=',false],['state','!=','draft']]}" options="{}"/>
            </button>
            <button name="button_cancel" position="attributes">
                <attribute name="invisible">True</attribute>
            </button>
        </field>
    </record>

    <!-- Agrega filtro de canceladas a la búsqueda de las facturas -->
    <record id="view_account_invoice_filter_cancelled" model="ir.ui.view">
        <field name="inherit_id" ref="account.view_account_invoice_filter"></field>
        <field name="name">account.invoice.select.cancelled</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='late']" position="after">
                <filter string="Canceladas" name="cancelled_invoices" domain="[('state', '=', 'cancel')]"/>
            </xpath>
        </field>
    </record>

    <!-- Agrega el campo de motivo de cancelación a la vista de árbol -->
    <record id="view_invoice_tree_cancelled_inherit" model="ir.ui.view">
        <field name="inherit_id" ref="account.view_invoice_tree"></field>
        <field name="name">account.invoice.tree.cancelled</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="cancellation_reason" optional="hide"/>
                <field name="cancellation_date" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_tree_cancelled_new" model="ir.ui.view">
        <field name="name">account.invoice.tree.cancelled.new</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"></field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="cancellation_reason" optional="show"/>
                <field name="cancellation_date" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='invoice_origin']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_date_due']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_untaxed_signed']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_residual_signed']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>

    <!-- Crear una acción para la vista de facturas canceladas -->
    <record id="action_move_invoice_type_cancelled" model="ir.actions.act_window">
        <field name="name">Facturas Canceladas</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_invoice_tree_cancelled_new"/>
        <field name="search_view_id" ref="view_account_invoice_filter_cancelled"/>
        <field name="domain">[('type', '=', 'out_invoice')]</field>
        <field name="context">{'default_type': 'out_invoice', 'search_default_cancelled_invoices': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Sin facturas canceladas
            </p>
            <p>
            No se encontraron resultados para la búsqueda.
            </p>
        </field>
    </record>

    <menuitem id="menu_action_move_invoice_type_cancelled" action="action_move_invoice_type_cancelled" parent="account.menu_finance_receivables" sequence="2"/>

</odoo>
