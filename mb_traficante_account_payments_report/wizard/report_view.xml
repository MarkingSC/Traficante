<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_payments_report_wizard" model="ir.ui.view">
        <field name="name">account.payments.report</field>
        <field name="model">account.payments.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options" version="13.0">
                <group col="4">
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="move_id_state" />
                    <field name="move_id_estado_factura" />
                    <field name="partner_id" />
                </group>
                <footer>
                    <button name="get_report" string="Get report" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_payments_report" model="ir.actions.act_window">
        <field name="name">Account Payment Report</field>
        <field name="res_model">account.payments.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_payments_report_wizard"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_account_payments_report"
              name="Account Payments Report"
              sequence="3"
              action="action_account_payments_report"
              parent="account.account_reports_management_menu"
              groups="account.group_account_invoice"/>

</odoo>
