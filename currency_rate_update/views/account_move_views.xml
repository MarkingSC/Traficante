<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="account_move_custom_rate_view">
        <field name="name">account.move.custom.rate.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="currency_rate" string="Rate" attrs="{'invisible': [('currency_id', '=', 'MXN')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
