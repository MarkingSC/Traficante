<odoo>

    <data>
        <record id="authorization_assigned_notification_template" model="mail.template">
            <field name="name">Authorization assigned notification</field>
            <field name="model_id" ref="mb_authorizations.model_authorization_task"/>
            <field name="subject">Authorization: ${object.name}</field>
            <field name="email_from">${object.applicant_uid.login}</field>
            <field name="email_to">${object.assigned_uid.login}</field>
            <field name="email_cc">${object.notified_emails}</field>
            <field name="lang">${object.assigned_uid.lang}</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Hello,
                        <br/>
                        <br/>
                        The user ${object.applicant_uid.name} have tried to ${object.name}. But it needs your authorization to continue with the process.
                    </p>
                    <p>
                        Te reason is:
                        <br/>
                        ${object.reason}
                    </p>
                    Please take a look to the task:
                    <div style="text-align: center; margin: 16px 0px 16px 0px;">
                        <a href="${object.task_url}" style="background-color:#875A7B;padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                            View
                        </a>
                    </div>
                    <br/>
                    Thank you,
                    <br/>
                    % if object.applicant_uid and object.applicant_uid.signature:
                        ${object.applicant_uid.signature | safe}
                    % endif
                </div>
            </field>
            <field name="auto_delete" eval="False"/>
            <field name="user_signature" eval="False"/>
        </record>

    </data>
</odoo>