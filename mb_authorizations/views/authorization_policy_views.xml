<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="authorization_policy_tree_view" model="ir.ui.view">
            <field name="name">authorization.policy.tree.view</field>
            <field name="model">authorization.policy</field>
            <field name="type">tree</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="policys">
                    <field name='name' optional="show" string="Name"/>
                    <field name="model_id" optional="show" string="Model"/>
                    <field name="authorizer_uid" optional="show" string="Default authorizer"/>
                </tree>
            </field>
        </record>

        <record id="view_authorization_policy_form" model="ir.ui.view">
            <field name="name">authorization.policy.form</field>
            <field name="model">authorization.policy</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Authorization policy">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="before_condition" string="Before condition"/>
                            <field name="after_condition" string="After condition"/>
                            <field name="model_id" string="Model"/>
                            <field name="default_description" string="Default description"/>
                            <field name="default_priority" widget="priority" string="Default priority"/>
                            <field name="authorizer_uid" string="Default authorizer"/>
                            <field name="notified_uids" string="Notified authorizers"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_authorization_policy_tree" model="ir.actions.act_window">
            <field name="name">Authorization policies</field>
            <field name="res_model">authorization.policy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="authorization_policy_tree_view"/>
        </record>
    </data>
</odoo>


