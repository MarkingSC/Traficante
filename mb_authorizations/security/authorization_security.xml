<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="group_authorization_management" model="res.groups">
            <field name="name">Authorizations management</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="rule_personal_authorization_tasks" model="ir.rule">
            <field name="name">Personal authorization tasks: You can't update this record</field>
            <field ref="model_authorization_task" name="model_id"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">
            [
                '|'
                    '|',
                        '|',
                            '|',
                                ('policy_id.notified_uids', 'in', user.id),
                                ('assigned_uid', '=', user.id),
                        ('applicant_uid','=',user.id),
                        ('applicant_uid','=',False),
                    ('hide_task', '=', False)
                    ]</field>
        </record>

        <record id="rule_read_authorization_tasks" model="ir.rule">
            <field name="name">Read authorization tasks: You can't update this record</field>
            <field ref="model_authorization_task" name="model_id"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">
            [
                '|',
                    ('policy_id.additional_viewer_uids', 'in', user.id),
                    ('hide_task', '=', False)
                    ]</field>
        </record>

        <record id="rule_personal_authorization_tasks_admin" model="ir.rule">
            <field name="name">All authorization tasks</field>
            <field ref="model_authorization_task" name="model_id"/>
            <field name="groups" eval="[(4, ref('mb_authorizations.group_authorization_management'))]"/>
            <field name="domain_force">
            [(1, '=', 1)]</field>
        </record>

    </data>
</odoo>