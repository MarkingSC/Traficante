<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form_traficante_inherit">
            <field name="inherit_id" ref="sale.view_order_form"></field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="replace">
                    <field name="product_id" attrs="{                                             
                                    'readonly': [('product_updatable', '=', False)],                                             
                                    'required': [('display_type', '=', False)],                                         
                                    }" options="{'no_open': True}" force_save="1" context="{                                             
                                    'partner_id': parent.partner_id,                                             
                                    'quantity': product_uom_qty,                                             
                                    'pricelist': parent.pricelist_id,                                             
                                    'uom':product_uom,                                             
                                    'company_id': parent.company_id,   
                                    'default_company_id': allowed_company_ids[0],
                                    'default_lst_price': price_unit,                                             
                                    'default_description_sale': name                                         
                                    }" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" widget="product_configurator"/>
                </xpath>
                <xpath expr="//field[@name='sale_order_option_ids']/tree/field[@name='product_id']" position="replace">
                    <field name="product_id" domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"
                            context="{'default_company_id': allowed_company_ids[0]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>