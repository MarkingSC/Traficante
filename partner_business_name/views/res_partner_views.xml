<odoo>
    <record id="partner_business_name_form" model="ir.ui.view">
          <field name="name">res.partner.business_name.form</field>
          <field name="model">res.partner</field>
          <field name="type">form</field>
          <field name="inherit_id" ref="base.view_partner_form" />
          <field name="arch" type="xml">
              <xpath expr="..//field[@name='name']/.." position="after">
                  <h1>
                    <field name="business_name" placeholder="Business name"/>
                  </h1>
              </xpath>
              <xpath expr="//field[@name='child_ids']/form//field[@name='name']" position="before">
                <div class="o_td_label">
                    <label for="name" string="Nombre o RazÃ³n Social" style="font-weight:bold;" attrs="{'invisible': [('type','!=', 'invoice')]}"/>
                    <label for="name" string="Nombre del contacto" style="font-weight:bold;" attrs="{'invisible': [('type','=', 'invoice')]}"/>
                </div>
              </xpath>
              <xpath expr="//field[@name='child_ids']/form//field[@name='name']" position="attributes">
                <attribute name="nolabel">1</attribute>
              </xpath>
          </field>
    </record>

    <record id="view_res_partner_business_name_filter" model="ir.ui.view">
        <field name="name">res.partner.business_name.select</field>
        <field name="model">res.partner</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="business_name"></field>
            </xpath>
        </field>
    </record>
</odoo>
