<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="lot_tracking_view_move_line_tree" model="ir.ui.view">
            <field name="name">lot.tracking.stock.move.line.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"></field>
            <field name="priority">8</field>
            <field name="arch" type="xml">
                <!--orden por defecto en el informe de movimientos de inventario-->
                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">date desc</attribute>
                </xpath>
                <xpath expr="//field[@name='reference']" position='replace'>
                </xpath>
                <xpath expr="//field[@name='product_uom_id']" position='replace'>
                </xpath>
                <xpath expr="//field[@name='product_id']" position='after'>
                    <field name='reference'></field>
                    <field name="origin"/>
                    <field name="invoice_name"/>
                </xpath>
                <xpath expr="//field[@name='qty_done']" position='after'>
                    <field name='product_uom_id'></field>
                </xpath>
                <!--xpath expr="//field[@name='lot_id']" position='after'>
                    <field name='lot_iddle_time'></field>
                    <field name='lot_product_cost'></field>
                    <field name='lot_incoming_date'></field>
                    <field name='lot_picking_type'></field>
                    <field name='reference'></field>
                    <field name='lot_origin_doc'></field>
                    <field name='lot_uid'></field>
                </xpath>
                <xpath expr="//field[@name='product_id']" position='after'>
                    <field name='product_uom_id'></field>
                    <field name='lot_incoming_qtty'></field>
                    <field name='lot_outgoing_qtty'></field>
                    <field name='lot_current_stock'></field>
                    <field name="origin"/>
                    <field name="invoice_name"/>
                </xpath-->
            </field>
        </record>

        <record id="stock_move_line_view_search_date_range" model="ir.ui.view">
            <field name="inherit_id" ref="stock.stock_move_line_view_search"></field>
            <field name="name">stock.move.line.view.search.date.range</field>
            <field name="model">stock.move.line</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="date" string="From" filter_domain="[('date', '&gt;=', self)]"/>
                    <field name="date" string="To" filter_domain="[('date', '&lt;=', self)]"/>
                </xpath>
                <xpath expr="//filter[@name='done']" position="after">
                    <separator/>
                    <filter string="Lots" name="lots" domain="[('lot_id', '!=', False)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>


