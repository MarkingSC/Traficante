<odoo>
  <data>
    <record id="sale.action_view_sale_advance_payment_inv" model="ir.actions.act_window">
      <field name="groups_id" eval="[(6, 0, [ref('account.group_account_invoice'), ref('account.group_account_manager')])]"></field>
    </record>

    <record id="view_order_form_traficante_inherit" model="ir.ui.view">
      <field name="name">view.order.form.traficante.inherit</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="sale.view_order_form"></field>
      <field name="model">sale.order</field>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d']" position="attributes">
          <attribute name="groups">account.group_account_invoice</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>