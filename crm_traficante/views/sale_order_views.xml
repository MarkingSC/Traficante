<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form_no_tax_inherit">
            <field name="inherit_id" ref="sale.view_order_form"></field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True, 'default_company_id': allowed_company_ids[0]}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='tax_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="context">{'default_type':'invoice', 'show_address': 1, 'default_company_id': allowed_company_ids[0]}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="context">{'default_type':'delivery', 'show_address': 1, 'default_company_id': allowed_company_ids[0]}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="partner_business_name" readonly="1" string="RazÃ³n Social"></field> 
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>