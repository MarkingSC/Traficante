<odoo>
  <data>
    <record id="view_stock_quant_tree_editable_optional_value_inherit" model="ir.ui.view">
      <field name="name">stock.quant.tree.editable.optional.value.inherit</field>
      <field name="model">stock.quant</field>
      <field name="inherit_id" ref="stock_account.view_stock_quant_tree_editable_inherit"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='value']" position="replace">
          <field name="value" optional="show"/>
        </xpath>
      </field>
    </record>

    <record id="quant_search_traficante_view" model="ir.ui.view">
      <field name="name">stock.quant.search</field>
      <field name="model">stock.quant</field>
      <field name="inherit_id" ref="stock.quant_search_view"/>
      <field name="arch" type="xml">
        <xpath expr="//filter[@name='productgroup']" position = "before">
          <filter string="Category" name="categorygroup" context="{'group_by': 'product_category'}"/>
        </xpath>
      </field>
    </record>

    <record model="ir.actions.server" id="stock.action_view_quants"> <!-- Menu + python -->
        <field name="name">Inventory</field>
        <field name="model_id" ref="model_stock_quant"/>
        <!--<field name="inherit_id" ref="stock.action_view_quants"/>-->
        <field name="state">code</field>
        <field name="code">
            action = model.with_context(
                search_default_internal_loc=1,
                search_default_categorygroup=1,
                search_default_productgroup=1,
                search_default_locationgroup=1,
            ).action_view_quants()
        </field>
    </record>

    <record model="ir.actions.act_window" id="stock_view_quants_inventory">
        <field name="name">Inventory</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="stock_traficante.view_stock_quant_tree_editable_optional_value_inherit"/>
        <field name="context">{'search_default_internal_loc': 1, 'search_default_categorygroup': 1, 'search_default_productgroup': 1, 'search_default_locationgroup': 1}</field>
    </record>

    <menuitem id="stock.menu_valuation" name="Inventory Report"
              parent="stock.menu_warehouse_report" sequence="100"
              action="stock_view_quants_inventory"/>

  </data>
</odoo>