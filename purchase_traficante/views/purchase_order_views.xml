<odoo>
    <data>
        <record model="ir.ui.view" id="purchase_order_view_form_traficante_inherit">
            <field name="inherit_id" ref="purchase_stock.purchase_order_view_form_inherit"></field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_view_picking']" position="attributes">
                    <attribute name="groups">stock.group_stock_user</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="attributes">
                    <attribute name="options">{'no_create': False}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="replace">
                    <field name="product_id" attrs="{                                             
                                    'readonly': [('state', 'in', ('purchase', 'to approve','done', 'cancel'))],                                             
                                    'required': [('display_type', '=', False)],                                         
                                    }" context="{
                                        'partner_id':parent.partner_id, 
                                        'quantity':product_qty,
                                        'uom':product_uom, 
                                        'company_id': parent.company_id,  
                                        'default_company_id': allowed_company_ids[0]
                                        }" force_save="1" domain="[('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="receipt_type" attrs="{'readonly': ['|', ('invoice_status','=', 'invoiced'), ('state', '=', 'done')]}"/>
                    <field name="payment_term_id" attrs="{'readonly': ['|', ('invoice_status','=', 'invoiced'), ('state', '=', 'done')], 'required': [('receipt_type', '=', 'credito')], 'invisible': ['|',('receipt_type', '=', 'regular'), ('receipt_type', '=', 'consigna')]}" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//group[@name='other_info']/field[@name='payment_term_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>