<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_goal_section_type_tree_view" model="ir.ui.view">
        <field name="name">sales.goal.section.type.tree.view</field>
        <field name="model">sales.goal.section.type</field>
        <field name="priority">8</field>
        <field name="arch" type="xml">
            <tree string="Section types for sales goals report">
                <field name="name"/>
                <field name="show_name" optional="hidden"/>
                <field name="show_goal_pct" optional="hidden"/>
                <field name="show_sales_amount" optional="hidden"/>
                <field name="show_total" optional="hidden"/>
            </tree>
        </field>
    </record>

    <record id="sales_goal_section_type_form_view" model="ir.ui.view">
        <field name="name">sales.goal.section.type.form.view</field>
        <field name="model">sales.goal.section.type</field>
        <field name="arch" type="xml">
            <form string="Section type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <notebook>
                        <page name="Report view" string="Report view">
                            <group>
                                <field name="show_name"/>
                                <field name="show_goal_pct"/>
                                <field name="show_sales_amount" />
                                <field name="show_total"/>
                                <field name="total_row_name" attrs="{'invisible':[('show_total','=', False)]}"/>
                                <field name="bg_color"/>
                                <field name="font_color"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sales_goals_section_type_tree" model="ir.actions.act_window">
        <field name="name">Section types for sales goals report</field>
        <field name="res_model">sales.goal.section.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sales_goal_section_type_tree_view"/>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_sales_goals_section_type" name="Section types for sales goals report" sequence="10" action="action_sales_goals_section_type_tree" parent="sale.menu_sale_config" groups="account.group_account_manager,account.group_account_user,sales_team.group_sale_manager"/>

</odoo>
