<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_origin_tree_view" model="ir.ui.view">
        <field name="name">sales.origin.tree.view</field>
        <field name="model">sales.origin</field>
        <field name="priority">8</field>
        <field name="arch" type="xml">
            <tree string="Sales Origins">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="sales_origin_form_view" model="ir.ui.view">
        <field name="name">sales.origin.form.view</field>
        <field name="model">sales.origin</field>
        <field name="arch" type="xml">
            <form string="Sales Origin">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label for="name" string="Name"/>
                            <field name="name"/>
                        </h1>
                        <label for="name" string="Description"/>
                        <field name="description"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sales_origin_tree" model="ir.actions.act_window">
        <field name="name">Sales Origins</field>
        <field name="res_model">sales.origin</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sales_origin_tree_view"/>
        <field name="context">{}</field>
    </record>

    <!-- Adición del campo de origen de ventas para el cliente -->
    <record id="partner_sales_origin_form" model="ir.ui.view">
        <field name="name">res.partner.sales.origin.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']/field[@name='user_id']" position="after">
                <field name="sales_origin_id"/>                  
            </xpath>
        </field>
    </record>

    <!-- Adición del campo de origen de ventas para el pedido -->
    <record id="sale_order_sales_origin_form" model="ir.ui.view">
        <field name="name">sale.order.sales.origin.form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="sales_origin_id" />                  
            </xpath>
        </field>
    </record>

    <!-- Adición del campo de origen de ventas para la factura -->
    <record id="account_move_sales_origin_form" model="ir.ui.view">
        <field name="name">account.move.sales.origin.form</field>
        <field name="model">account.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="sales_origin_id" attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>                  
            </xpath>
        </field>
    </record>
</odoo>
