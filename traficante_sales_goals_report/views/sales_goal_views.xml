<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_goal_tree_view" model="ir.ui.view">
        <field name="name">sales.goal.tree.view</field>
        <field name="model">sales.goal</field>
        <field name="priority">8</field>
        <field name="arch" type="xml">
            <tree string="Goals" default_order='active, sequence'>
                <field name='sequence' widget='handle'/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="section_type_id"/>
                <field name="structure_base" attrs="{'readonly':[('structure_base','=',True)]}"/>
                <field name="goal_amount"/>
                <field name="period_month"/>
                <field name="period_year"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="sales_goal_form_view" model="ir.ui.view">
        <field name="name">sales.goal.form.view</field>
        <field name="model">sales.goal</field>
        <field name="arch" type="xml">
            <form string="Sales Goal">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <notebook>
                        <page name="Definition" string="Definition">
                            <group>
                                
                                <field name="type"/>
                                <field name="sales_user_id" attrs="{'invisible':[('type','!=','salesperson')], 'required': [('type', '=', 'salesperson')]}"/>
                                <field name="partner_id" attrs="{'invisible':[('type','!=','customer')], 'required': [('type', '=', 'customer')]}"/>
                                <field name="product_category_ids" widget="many2many_tags" attrs="{'invisible':[('type','!=','product')], 'required': [('type', '=', 'product')]}"/>
                                <field name="sales_origin_id" attrs="{'invisible':[('type','!=','s_origin')], 'required': [('type', '=', 's_origin')]}"/>
                                <field name="invoice_origin_id" attrs="{'invisible':[('type','!=','i_origin')], 'required': [('type', '=', 'i_origin')]}"/>
                                
                                <field name="parent_id"/>
                                <field name="structure_base" attrs="{'readonly':[('structure_base','=',True)]}"/>
                                <field name="goal_amount"/>
                                <field name="period_month" attrs="{'required': [('type', '!=', 'group')]}"/>
                                <field name="period_year" attrs="{'required': [('type', '!=', 'group')]}"/>
                                <field name="child_ids" attrs="{'invisible':  True}"/>
                            </group>
                        </page>
                        <page name="Report view" string="Report view">
                            <group>
                                <field name="section_type_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sales_goals_tree" model="ir.actions.act_window">
        <field name="name">Sales Goals</field>
        <field name="res_model">sales.goal</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sales_goal_tree_view"/>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_sales_goals" name="Goals" sequence="10" action="action_sales_goals_tree" parent="sale.menu_sale_config" groups="account.group_account_manager,account.group_account_user,sales_team.group_sale_manager"/>

    <record id="action_duplicate_wizard" model="ir.actions.server">
        <field name="name">Duplicate</field>
        <field name="model_id" ref="traficante_sales_goals_report.model_sales_goal"/>
        <field name="binding_model_id" ref="traficante_sales_goals_report.model_sales_goal"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            action = model.action_set_duplicate()
        </field>
    </record>

    <record id="sales_goal_duplicate_multi" model="ir.ui.view">
            <field name="name">sales.goal.duplicate.multi</field>
            <field name="model">sales.goal.duplicate.wizard</field>
            <field name="arch" type="xml">
                <form string="Change the period">
                    <group name="form">
                        <div class="col-6">
                            <label for="period_month" string="Month"/>
                            <field name="period_month"></field>
                            <label for="period_year" string="Year"/>
                            <field name="period_year"></field>
                        </div>
                        <div class="col-6">
                            <label for="period_year" string="Duplicate children"/>
                            <field name="duplicate_children"></field>
                        </div>
                    </group>
                    <footer>
                        <button string="Duplicate" name="action_duplicate" type="object" class="oe_highlight"></button>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"></button>
                    </footer>
                </form>
            </field>
        </record>

</odoo>
