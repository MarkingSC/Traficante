<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_goal_tree_view" model="ir.ui.view">
        <field name="name">sales.goal.tree.view</field>
        <field name="model">sales.goal</field>
        <field name="priority">8</field>
        <field name="arch" type="xml">
            <tree string="Goals" default_order='active, sequence'>
                <field name='sequence' widget='handle'/>
                <field name="name"/>
                <field name="description" optional="show"/>
                <field name="parent_id"/>
                <field name="section_type_id" optional="hidden"/>
                <field name="goal_amount"/>
                <field name="parent_domain" groups="base.group_no_one"/>
                <field name="show_name" optional="hidden"/>
                <field name="show_goal_pct" optional="hidden"/>
                <field name="show_sales_amount" optional="hidden"/>
                <field name="show_total" optional="hidden"/>
                <field name="period_month"/>
                <field name="period_year"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="sales_goal_form_view" model="ir.ui.view">
        <field name="name">sales.goal.form.view</field>
        <field name="model">sales.goal</field>
        <field name="arch" type="xml">
            <form string="Sales Goal">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <field name="description"/>

                    <notebook>
                        <page name="Definition" string="Definition">
                            <group>
                                
                                <field name="type"/>
                                <field name="sales_user_id" attrs="{'invisible':[('type','!=','salesperson')]}"/>
                                <field name="partner_id" attrs="{'invisible':[('type','!=','customer')]}"/>
                                <field name="product_category_id" attrs="{'invisible':[('type','!=','product')]}"/>
                                <field name="sales_origin_id" attrs="{'invisible':[('type','!=','s_origin')]}"/>
                                <field name="invoice_origin_id" attrs="{'invisible':[('type','!=','i_origin')]}"/>
                                
                                <field name="parent_id"/>
                                <field name="goal_amount"/>
                                <field name="parent_domain" readonly="1"/>
                                <field name="all_domain"/>
                                <field name="period_month"/>
                                <field name="period_year"/>
                            </group>
                        </page>
                        <page name="Report view" string="Report view">
                            <group>
                                <field name="show_name"/>
                                <field name="show_goal_pct"/>
                                <field name="show_sales_amount" />
                                <field name="show_total"/>
                            </group>
                        </page>
                        <page name="Calculated" string="Calculated">
                            <group>
                                <field name="date_filter" readonly="1"/>
                                <field name="structure"/>
                                <field name="sales_percentage"/>
                                <field name="sales_at_date" />
                                <field name="sales_total_week"/>
                                <field name="sales_total_month"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sales_goals_tree" model="ir.actions.act_window">
        <field name="name">Sales Goals</field>
        <field name="res_model">sales.goal</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sales_goal_tree_view"/>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_sales_goals" name="Goals" sequence="10" action="action_sales_goals_tree" parent="sale.menu_sale_config" groups="account.group_account_manager,account.group_account_user,sales_team.group_sale_manager"/>

</odoo>
