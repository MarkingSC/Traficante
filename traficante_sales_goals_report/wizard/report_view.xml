<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_goals_report_wizard" model="ir.ui.view">
        <field name="name">sales.goal.report</field>
        <field name="model">sales.goals.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options" version="13.0">
                <group col="4">
                    <field name="date_start" />
                    <field name="date_filter" />
                    <field name="full_period" />
                </group>
                <footer>
                    <button name="get_report" string="Get report" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sales_goals_report" model="ir.actions.act_window">
        <field name="name">Sales Goals</field>
        <field name="res_model">sales.goals.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sales_goals_report_wizard"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sales_goals_report"
              name="Goals Report"
              sequence="10"
              action="action_sales_goals_report"
              parent="account.account_reports_management_menu"
              groups="account.group_account_manager,account.group_account_user"/>
    
    <menuitem id="menu_sales_goals_report"
              name="Goals Report"
              sequence="20"
              action="action_sales_goals_report"
              parent="sale.menu_sale_report"
              groups="account.group_account_manager,account.group_account_user"/>

</odoo>
