<odoo>
        <record id="view_purchase_order_multi_discount_form" model="ir.ui.view">
            <field name="name">view.purchase.order.multi.discount.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
                     <field name="multi_discount" attrs="{'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}"/>
                     <field name="discount_amt" invisible="1"/>
                     <field name="discount" attrs="{'readonly': [('state', 'in', ('purchase', 'done', 'cancel'))]}"/>
                </xpath>
                
            </field>
        </record>
        
        
</odoo>
