<odoo>
        <record id="view_account_move_multi_discount_form" model="ir.ui.view">
            <field name="name">view.account.move.multi.discount.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount']" position="before">
                     <field name="multi_discount" force_save="1"/>
                     <field name="discount_amt" invisible="1"/>
                </xpath>
            </field>
        </record>
</odoo>
