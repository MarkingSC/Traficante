<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_detailed_report_wizard" model="ir.ui.view">
        <field name="name">sales.detailed.report</field>
        <field name="model">sales.detailed.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options" version="13.0">
                <group col="4">
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="move_id_state" />
                    <field name="move_id_estado_factura" />
                </group>
                <footer>
                    <button name="get_report" string="Get report" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sales_detailed_report" model="ir.actions.act_window">
        <field name="name">Sales Detailed</field>
        <field name="res_model">sales.detailed.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sales_detailed_report_wizard"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sales_detailed_report"
              name="Detailed Sales Report"
              sequence="15"
              action="action_sales_detailed_report"
              parent="sale.menu_sale_report"
              groups="sales_team.group_sale_salesman"/>

</odoo>
