<?xml version ="1.0" encoding="utf-8" ?>

<odoo>
    <record id="sh_res_company_account_unpaid_invoice_reminder_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet//notebook" position="inside">
                <page string="Unpaid Invoice Reminder">
                    <div>
                        <group>
                            <group>
                                <field name="unpaid_reminder" string="Notification?" invisible="1" />
                                <field name="reminder_cc" string="CC emails"/>
                            </group>
                        </group>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <!--     Boolean Field in res partner     -->
    <record id="sh_res_partner_account_unpaid_invoice_reminder_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="sh_no_mail" />
            </field>
        </field>
    </record>
</odoo>
