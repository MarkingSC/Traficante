<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_margin_report_wizard" model="ir.ui.view">
        <field name="name">stock.margin.report</field>
        <field name="model">stock.margin.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options" version="13.0">
                <group col="4">
                    <field name="report_on_date" />
                </group>
                <footer>
                    <button name="get_report" string="Get report" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_margin_report" model="ir.actions.act_window">
        <field name="name">Stock Margin</field>
        <field name="res_model">stock.margin.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_margin_report_wizard"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_stock_margin_report"
              name="Margin Report"
              sequence="10"
              action="action_stock_margin_report"
              parent="stock.menu_warehouse_report" 
              groups="stock.group_stock_user"/>

</odoo>
