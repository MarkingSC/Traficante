<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="stock_margin_report_tree_view" model="ir.ui.view">
            <field name="name">stock.margin.report.tree.view</field>
            <field name="model">product.template</field>
            <field name="priority">8</field>
            <field name="arch" type="xml">
                <tree string="Products" create="false" edit="false">

                    <field name='id' optional="hide" string="ID"/>
                    <field name="default_code" optional="show" string="Code"/>
                    <field name="name" optional="show" string="Description"/>
                    <field name="categ_id" optional="show" string="Category"/>
                    <field name="uom_id" optional="show" string="UoM"/>
                    <field name="active" optional="show" string="Status"/>
                    <field name="latest_cost" widget='monetary' optional="show" string="Latest cost"/>
                    <field name="avg_cost" widget='monetary' optional="show" string="Average cost"/>
                    <field name="standard_price" widget='monetary' optional="show" string="Price"/>
                    <field name="ieps_tax_pct" widget="percentage" optional="show" string="% IEPS"/>
                    <field name="iva_tax_pct" widget="percentage" optional="show" string="% IVA"/>
                    <field name="iva_price" widget='monetary' optional="show" string="Price, IVA incl."/>
                    <field name="ieps_cost" widget='monetary' optional="show" string="Cost, IEPS incl."/>
                    <field name="taxes_cost" widget='monetary' optional="show" string="Cost, Tax incl."/>
                    <field name="taxes_price" widget='monetary' optional="show" string="Price, Tax incl."/>
                    <field name="total_margin_amt" widget='monetary' optional="show" string="Total margin amt."/>
                    <field name="cost_margin_pct" widget="percentage" optional="show" string="Margin on cost pct."/>
                    <field name="price_margin_pct" widget="percentage" optional="show" string="Margin on price pct."/>
                
                </tree>
            </field>
        </record>

        <record id="view_product_template_noupdate_price_form" model="ir.ui.view">
            <field name="name">product.template.noupdate.price.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//span[@name='update_cost_price']" position="attributes">
                    <attribute name='invisible'>True</attribute>
                </xpath>
            </field>
        </record>

        <record id="action_stock_margin_report_tree" model="ir.actions.act_window">
            <field name="name">Stock margin</field>
            <field name="res_model">product.template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock_margin_report_tree_view"/>
            <!--<field name="search_view_id" ref="view_account_move_line_filter_date_range"/>-->
            <field name="domain">[('standard_price', '!=', False)]</field>
        </record>



        <menuitem 
        id="menu_stock_margin_report_tree" 
        name="Stock Margin Report" 
        sequence="10" 
        action="action_stock_margin_report_tree" 
        parent="stock.menu_warehouse_report" 
        groups="stock.group_stock_user"/>

        <!-- Acceso a menÃº de informes de ventas para usuario de inventario 
    <record model="ir.ui.menu" id="sale.menu_sale_report">
        <field name="groups_id" eval="[(6,0,[ref('sales_team.group_sale_manager'), ref('purchase.group_purchase_manager'), ref('sales_team.group_sale_salesman')])]"></field>
    </record>
    -->

    <!-- modificar vista de formulario de productos para poder ver el margen en vivo -->
    <record model="ir.ui.view" id="product_template_margins_only_form_view">
        <field name="inherit_id" ref="product.product_template_only_form_view"></field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='taxes_id']" position="after">
                <field name="product_cost" widget='monetary' string="Costo"/>
                <field name="price_margin" widget="percentage" string="Margen sobre costo"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>


