<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="mail_server_form_add_company">
        <field name="model">ir.mail_server</field>
        <field name="inherit_id" ref="base.ir_mail_server_form" />
        <field name="arch" type="xml">
            <field name="sequence" position="after">
                <field name="company_ids" options="{'no_create': True}"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="mail_server_list_add_company">
        <field name="model">ir.mail_server</field>
        <field name="inherit_id" ref="base.ir_mail_server_list" />
        <field name="arch" type="xml">
            <field name="smtp_encryption" position="after">
                <field name="company_ids"/>
            </field>
        </field>
    </record>
</odoo>