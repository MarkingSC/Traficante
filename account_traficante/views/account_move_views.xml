<odoo>
    <data>
        <record id="view_move_form_traficante" model="ir.ui.view">
            <field name="name">view.move.form.traficante</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="..//group[@name='payments_info_group']" position="before">
                    <group string="Logistics" name="logistics_info_group" attrs="{'invisible': [('type', '=', 'in_invoice')]}">
                        <field name="invoice_file"></field>
                    </group>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="context">{'default_type':'delivery', 'show_address': 1, 'default_company_id': allowed_company_ids[0]}</attribute>
                    <attribute name="options">{'always_reload': True, 'no_quick_create': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'default_company_id': allowed_company_ids[0], 'res_partner_search_mode': (context.get('default_type', 'entry') in ('out_invoice', 'out_refund', 'out_receipt') and 'customer') or (context.get('default_type', 'entry') in ('in_invoice', 'in_refund', 'in_receipt') and 'supplier') or False,'show_address': 1, 'default_is_company': True, 'show_vat': True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_account_invoice_filter_traficante_inherit" model="ir.ui.view">
            <field name="type">search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"></field>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='unpaid']" position="attributes">
                    <attribute name="string">Unpaid</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>