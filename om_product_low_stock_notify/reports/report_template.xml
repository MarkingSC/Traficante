<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_low_stock_template">
            <t t-call="web.internal_layout">
                <style>
	                .my_table{
	                    width:100%;
	                }
	                .my_table th{
	                    padding:5px;
	                    border-bottom:1px solid black;
	                    background:#0e3b4a;
	                    color:#FFF;
	                }
	                .my_table td{
	                    padding:10px;
	                    border-bottom:1px solid #d6d6d6;
	                    font-size:17px;
	                }
	            </style>
                 <div class="page text-center">
                    <div class="oe_structure"/>
                        <h3>PRODUCT LOW STOCK</h3><br/>
                    
                    <div class="row">
                        <t t-set="get_lines" t-value="doc.get_details()"/>
                        <table class="my_table" style="font-size: 14px" t-if="get_lines">
	                    	<thead>
	                            <tr>
	                                <th style="width:60%" class="text-left">Product</th>
	                                <th style="width:20%" class="text-right">
	                                    <t t-if="doc.low_stock_notify_on == 'on_hand_qty'">
	                                        On Hand Quantity
	                                    </t>
	                                    <t t-if="doc.low_stock_notify_on == 'forecast'">
	                                        Forecast Quantity
	                                    </t>
	                                </th>
	                                <th style="width:20%" class="text-right">Minimum Quantity</th>
	                            </tr>
	                        </thead>
	                        <tbody class="invoice_tbody">
	                            <t t-foreach="get_lines" t-as="l" >
	                        		<tr>
		                                <td class="text-left">
		                                    <span t-esc="l.get('product')"/>
		                                </td>
	                                    <td class="text-right">
	                                    	<span t-esc="l.get('stock')"/>
	                                    </td>
	                                    <td class="text-right">
	                                    	<span t-esc="l.get('minimum_qty')"/>
	                                    </td>
		                            </tr>
	                        	</t>
	                        </tbody>
	                    </table>
                        
                    </div>
                    
                 </div>
            </t>
        </template>
    
