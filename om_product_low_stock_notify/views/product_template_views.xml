<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_quantity_minimum_form" model="ir.ui.view">
        <field name="name">product.template.quantity.minimum.form</field>
     	<field name="model">product.template</field>
	    <field name="inherit_id" ref="product.product_template_only_form_view"/>
     	<field name="arch" type="xml">
	        <xpath expr="//field[@name='barcode']" position="after">
	            <field name="minimum_quantity" required="1"/>
            </xpath>
     	</field>
	 </record>
	 
	 <record id="product_product_quantity_minimum_form" model="ir.ui.view">
        <field name="name">product.product.quantity.minimum.form</field>
     	<field name="model">product.product</field>
	    <field name="inherit_id" ref="product.product_normal_form_view"/>
     	<field name="arch" type="xml">
	        <xpath expr="//field[@name='barcode']" position="after">
	            <field name="minimum_quantity" required="1"/>
            </xpath>
     	</field>
	 </record>
</odoo>
